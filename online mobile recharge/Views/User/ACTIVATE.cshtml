@model online_mobile_recharge.Models.CallerTune

@{
    ViewBag.Title = "ACTIVATE";
    Layout = "~/views/shared/allLayout.cshtml";
}
<link href="~/Content/GETOFFERS.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">






        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Tansaction_id)









        <!-- Sections -->
        <section id="contact">
            <div id="map"></div>
            <div class="container text-center">
                <!-- Example row of columns -->
                <div class="row">
                    <div class="col-md-4 col-md-offset-4 col-sm-12 col-xs-12">
                        <div class="contact-form-area">
                            <form>

                                <h3 style="color:white">ACTIVATE CALLER TUNE</h3>
                                <h4 style="color:seagreen"> @Session["TUNE"]</h4>
                                <h4 style="color:darkred"> @Session["CALLER"]</h4>
                           
                                <br />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.EditorFor(model => model.TUNE_CODE, new { htmlAttributes = new { @class = "form-control", placeholder = "ENTER NUMBER OF RECHARGE", autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.TUNE_CODE, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.EditorFor(model => model.TUNE_NAME, new { htmlAttributes = new { @class = "form-control", placeholder = "TUNE NAME", autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.TUNE_NAME, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.SINGER, new { htmlAttributes = new { @class = "form-control", placeholder = "SINGER NAME", autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.SINGER, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.CHARGES, new { htmlAttributes = new { @class = "form-control", placeholder = "CHARGES", autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.CHARGES, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.DropDownListFor(m =>Model.payment_method, new SelectList(new[] { "CREDIT CARD", "DEBIT CARD", "JAZZ CASH" }), "PAYMENT METHODS")
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Account_No, new { htmlAttributes = new { @class = "form-control", placeholder = "ACCOUNT NUMBER", autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.Account_No, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.amount, new { htmlAttributes = new { @class = "form-control", placeholder = "AMOUNT", autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.amount, "", new { @class = "text-danger" })
                                </div>
                               
                              

                                <button type="submit" class="btn btn-primary contact-btn">ACTIVATE</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div> <!-- /container -->
        </section>
    </div>
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>