@model online_mobile_recharge.Models.offer

@{
    ViewBag.Title = "Edit";
    Layout = "~/views/shared/allLayout.cshtml";
}
<link href="~/Content/GETOFFERS.css" rel="stylesheet" />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">






        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Transaction_id)









        <!-- Sections -->
        <section id="contact">
            <div id="map"></div>
            <div class="container text-center">
                <!-- Example row of columns -->
                <div class="row">
                    <div class="col-md-4 col-md-offset-4 col-sm-12 col-xs-12">
                        <div class="contact-form-area">
                            <form>

                                <h3 style="color:white;font-weight:bold;background-color:gray">POSTPAID BILL PAY</h3>
                                <h4 style="color:darkred;font-weight:bold"> @Session["BILL"]</h4>
                                <h4 style="color:darkgreen;font-weight:bold"> @Session["offer"]</h4>

                                <br />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.EditorFor(model => model.offercode, new { htmlAttributes = new { @class = "form-control", placeholder = "ENTER NUMBER OF RECHARGE", required = "required", autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.offercode, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.EditorFor(model => model.offer_type, new { htmlAttributes = new { @class = "form-control", placeholder = "BILL TYPE", required = "required", autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.offer_type, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.offer_description, new { htmlAttributes = new { @class = "form-control", placeholder = "OFFER DESCRIPTION", required = "required", autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.offer_description, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.offer_price, new { htmlAttributes = new { @class = "form-control", placeholder = "OFFER PRICE", required = "required", autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.offer_price, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.DropDownListFor(m => m.paymentmethod, new SelectList(new[] { "CREDIT CARD", "DEBIT CARD", "JAZZ CASH", }), "PAYMENT METHODS")
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Account_No, new { htmlAttributes = new { @class = "form-control", placeholder = "ACCOUNT NUMBER", required = "required", autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.Account_No, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.amount, new { htmlAttributes = new { @class = "form-control", placeholder = "AMOUNT", required = "required", autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.amount, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.mpin, new { htmlAttributes = new { @class = "form-control", placeholder = "MPIN", required = "required", autocomplete = "off" } })
                                    @Html.ValidationMessageFor(model => model.mpin, "", new { @class = "text-danger" })

                                    @Session["er"]
                                </div>

                                <button type="submit" class="btn btn-primary contact-btn">PAY BILL</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div> <!-- /container -->
          
        </section>
    </div>
}


<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>